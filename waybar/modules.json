{
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "persistent-workspaces": {
             "*": 5
        }       
    },

    "custom/settings": {
        "format": "  ",
        "on-click": "ghostty -e nvim ~/.config/hypr/",
        "tooltip": false
    },

    "custom/logo": {
        "format": "  󰣇  ",
        "tooltip": false
    },

    "tray": {
        "icon-size": 21,
        "spacing": 10
    },

    "clock": {
        "format": "{:%H:%M}",
        "on-click": "",
        "tooltip-format": "  {:%Y-%m-%d}"
    },

    "hyprland/language": {
        "format": "   {short}",
        "on-click": "hyprctl switchxkblayout logitech-usb-receiver-keyboard next"
    },
    
    "pulseaudio": {
        "format": "{icon}{volume}% ",
        "format-muted": "  ",
        "format-source": "{volume}% ",
        "format-icons": {
            "headphone": " ",
            "headset": " ",
            "default": ["  ", "   ", "   "]
        },
        "on-click": "pavucontrol"
    },

    "bluetooth": {
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "blueman-manager"
    },
}

